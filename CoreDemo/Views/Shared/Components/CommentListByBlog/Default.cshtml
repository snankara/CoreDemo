@using Entities.Concrete
@model List<Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }

    @if (Model.Count == 0)
	{
		 <p class="text-muted">Henüz yorum yapılmadı, ilk yorumu siz yapın.</p>
	}
</div>
